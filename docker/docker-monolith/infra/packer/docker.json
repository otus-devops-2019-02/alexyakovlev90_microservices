{
  "_comment": "This is Test parametrized image builder",
  "variables": {
    "gcp_machine_type": "f1-micro"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `gcp_project_id`}}",
      "image_name": "reddit-app-base-{{timestamp}}",
      "image_family": "reddit-app-base",
      "source_image_family": "{{user `gcp_image_family`}}",
      "image_description": "otus study image",
      "disk_size": "10",
      "disk_type": "pd-ssd",
      "network": "default",
      "tags": "puma-server",
      "zone": "europe-west1-b",
      "ssh_username": "appuser",
      "machine_type": "{{user `gcp_machine_type`}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/playbooks/docker.yml",
      "ansible_env_vars": ["ANSIBLE_ROLES_PATH={{ pwd }}/ansible/roles"],
      "extra_arguments": ["--tags","docker"]
    }
  ]
}
